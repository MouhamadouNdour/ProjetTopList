<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ynov.projetTopList" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ProjetTopList</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    
    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" spec="1" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="href:*" />

    <preference name="StatusBarBackgroundColor" value="#7E72FF" />

    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="www/img/logo.png" density="land-hdpi" />
        <splash src="www/img/logo.png" density="land-ldpi" />
        <splash src="www/img/logo.png" density="land-mdpi" />
        <splash src="www/img/logo.png" density="land-xhdpi" />
        <splash src="www/img/logo.png" density="land-xxhdpi" />
        <splash src="www/img/logo.png" density="land-xxxhdpi" />
    </platform>

    <platform name="windows">
        <splash src="www/img/logos/logo.png" target="SplashScreen"/>
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

</widget>
