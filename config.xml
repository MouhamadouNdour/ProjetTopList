<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ynov.projetTopList" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ProjetTopList</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    
    <content src="index.html" />
    <preference name="loadUrlTimeoutValue" value="60000" />

    <plugin name="cordova-plugin-whitelist" spec="1" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <preference name="SplashScreenBackgroundColor" value="#FFFFFF" />

    <platform name="android">
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <allow-intent href="market:*" />
        <splash src="www/img/splash-hdpi.png" density="hdpi" />
        <splash src="www/img/splash-ldpi.png" density="ldpi" />
        <splash src="www/img/splash-mdpi.png" density="mdpi" />
        <splash src="www/img/splash-xhdpi.png" density="xhdpi" />
        <splash src="www/img/splash-xxhdpi.png" density="xxhdpi" />
        <splash src="www/img/splash-xxxhdpi.png" density="xxxhdpi" />
    </platform>
    
    <platform name="browser">
        <preference name="SplashScreen" value="www/img/144x144.png" /> 
        <preference name="SplashScreenBackgroundColor" value="#FFFFFF" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

</widget>
